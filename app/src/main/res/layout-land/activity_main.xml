<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin"
    tools:context="com.salatart.onthisday.Activities.MainActivity">

    <TextView
        android:id="@+id/label_main_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="16dp"
        android:text="@string/main_title"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="32sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/label_main_title">

        <RelativeLayout
            android:id="@+id/start_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingEnd="16dp"
            android:paddingStart="16dp">

            <NumberPicker
                android:id="@+id/picker_day"
                android:layout_width="90dp"
                android:layout_height="140dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:orientation="vertical" />

            <TextView
                android:id="@+id/label_day"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_above="@id/picker_day"
                android:layout_alignParentStart="true"
                android:text="@string/label_day_picker"
                android:textAlignment="center"
                android:textSize="24sp" />

            <NumberPicker
                android:id="@+id/picker_month"
                android:layout_width="90dp"
                android:layout_height="140dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:orientation="vertical" />

            <TextView
                android:id="@+id/label_month"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_above="@id/picker_month"
                android:layout_alignParentEnd="true"
                android:text="@string/label_month_picker"
                android:textAlignment="center"
                android:textSize="24sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/end_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_search_for"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Button
                android:id="@+id/button_search_events"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="searchEvents"
                android:text="@string/search_events" />

            <Button
                android:id="@+id/button_search_births"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="searchBirths"
                android:text="@string/search_births" />

            <Button
                android:id="@+id/button_search_deaths"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="searchDeaths"
                android:text="@string/search_deaths" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
